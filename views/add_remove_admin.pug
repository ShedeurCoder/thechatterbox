extends layout 
block content 
    h1 Add or remove an admin
    form(action="" method="POST") 
        .input-group.py-3
            input.form-control(type="text", name="username" placeholder="Username" required pattern='[A-Za-z0-9_]{1,}')
            select.form-select(name="addRemove")
                option(value="add" selected) Add
                option(value="remove") Remove
        .form-group
        button.btn.btn-primary(type="submit" onsubmit="return confirm(`Are you sure you want to add/remove this person as an admin?`)") Submit